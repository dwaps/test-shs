<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	
	<constant name="struts.devMode" value="true" />
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	
	<package name="fr.dwaps.shs" namespace="/" extends="struts-default">
		<default-action-ref name="home" />
		
		<action name="home">
			<result>/WEB-INF/jsp/index.jsp</result>
		</action>
		
		<action name="client-all" class="fr.dwaps.shs.controller.action.ClientAction"
			method="allClient">
			<result name="success">/WEB-INF/jsp/client/all.jsp</result>
		</action>
		
		<action name="client-one" class="fr.dwaps.shs.controller.action.ClientAction"
			method="oneClient">
			<result name="success">/WEB-INF/jsp/client/one.jsp</result>
		</action>
		
		<action name="client-new" class="fr.dwaps.shs.controller.action.ClientAction"
			method="newClient">
			<result name="input">/WEB-INF/jsp/client/new.jsp</result>
			<result name="success">/WEB-INF/jsp/client/one.jsp</result>
		</action>
		
		<action name="client-edit" class="fr.dwaps.shs.controller.action.ClientAction"
			method="editClient">
			<result name="success">/WEB-INF/jsp/client/edit.jsp</result>
		</action>
		
		<action name="client-delete" class="fr.dwaps.shs.controller.action.ClientAction"
			method="deleteClient">
			<result name="success" type="redirectAction">client-all</result>
		</action>
		
	</package>
</struts>